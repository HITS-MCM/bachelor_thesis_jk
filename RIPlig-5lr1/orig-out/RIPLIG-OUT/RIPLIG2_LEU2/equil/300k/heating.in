# initial structure and coordinates
structure /scratch/mcm/trapp/jobs/pocket_505edb66-961a-471b-9951-1c9dc164f951/RIPLIG-OUT/RIPLIG2_LEU2/min/min.psf
coordinates /scratch/mcm/trapp/jobs/pocket_505edb66-961a-471b-9951-1c9dc164f951/RIPLIG-OUT/RIPLIG2_LEU2/min/min.coor


# output
outputName heating
binaryOutput no


# forcefield parameters
paraTypeCharmm on
parameters /share/apps/mcm/trapp4/trapptool/auxi/rip-script-NAMD/pdbtool/parms/charmm27.parameter
exclude	scaled1-4
1-4scaling 1.0

# cutoffs
switching on
switchDist 15.0
cutoff 17.0
pairListDist 18

# initial temperature/velocities
velocities /scratch/mcm/trapp/jobs/pocket_505edb66-961a-471b-9951-1c9dc164f951/RIPLIG-OUT/RIPLIG2_LEU2/min/min.vel
# dcdectory output
dcdFile heating.dcd
dcdFreq 50
velDcdFile heating.vel.dcd
velDcdFreq 50

# molecular dynamics timesteps
numSteps 1000
timeStep 1  # fs
rigidBonds all
firstTimeStep 0
stepsPerCycle 10
nonBondedFreq 2
fullElectFrequency 2
#GBIS parameters
GBIS on
ionConcentration 0.3
alphaCutoff 15
SASA on
GBISDelta 1.0
GBISBeta 0.8
GBISGamma 4.85

extendedSystem heating.in.xsc
# temperature coupling
langevin on
langevinHydrogen on
set temperature  300
langevinDamping     5.0

# constant pressure


# heating 
for {set i 10} {$i < $temperature} {incr i 25} {
  set tempr $i
  langevinTemp $tempr
  reinitvels   $tempr
  run 100
}
firsttimestep      0             ;# reset frame counter
reinitvels         $temperature
